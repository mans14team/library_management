{
  "AWSEBDockerrunVersion": "1",
  "Image": {
    "Name": "${DOCKER_USERNAME}/spring-app:${IMAGE_TAG}",
    "Update": "true"
  },
  "Ports": [
    {
      "ContainerPort": 8080,
      "HostPort": 80
    }
  ],
  "Volumes": [
    {
      "HostDirectory": "/var/log/eb-docker",
      "ContainerDirectory": "/var/log/app"
    }
  ],
  "Logging": "/var/log/nginx",
  "Command": [
    "sh",
    "-c",
    "java -Dserver.port=8080 -Dspring.profiles.active=prod -Dlogging.file.path=/var/log/app -Xms256m -Xmx512m -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -jar app.jar"
  ]
}